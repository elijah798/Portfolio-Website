extends layout.pug


block content 
  article.grid-container.portfolio-intro
    div

   
      h1 My Portfolio

    
      p.lead.text-light
        | Full Stack Developer with experience in software engineering and developing new features using React, Javascript, HTML, CSS, Node.js, Express, Python, Django
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

    each project in Projects
      .cell
        a(href=`/project/${project.id}`)
          img.thumbnail(src=project.thumbnail)
          h5= project.project_name